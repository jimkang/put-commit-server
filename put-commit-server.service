[Unit]
Description=put-commit-server
After=network.target
[Service]
ExecStart=/opt/put-commit-server/start-put-commit-server.js
Restart=always
User=bot
Group=bot
Environment=PATH=/usr/bin:/usr/local/bin
Environment=NODE_ENV=production
WorkingDirectory=/opt/put-commit-server
[Install]
WantedBy=multi-user.target
